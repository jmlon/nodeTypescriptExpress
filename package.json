{
  "name": "nodetypescriptexpress",
  "version": "1.0.0",
  "description": "Boilerplate code to start express projects with Typescript and Mocha/Jest",
  "main": "server.js",
  "scripts": {
    "test": "mocha --require ts-node/register tests/*.ts --timeout 10000 --exit",
    "testJest": "jest",
    "clean": "tsc --build --clean",
    "build": "tsc",
    "start": "tsc && node dist/src/server.js",
    "dev": "concurrently \"tsc --watch\" \"nodemon -q dist/src/server.js\""
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/jmlon/nodeTypescriptExpress.git"
  },
