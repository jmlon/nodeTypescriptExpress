  "bugs": {
    "url": "https://github.com/jmlon/nodeTypescriptExpress/issues"
  },
  "homepage": "https://github.com/jmlon/nodeTypescriptExpress#readme",
  "devDependencies": {
    "@types/express": "^4.17.13",
    "@types/jest": "^28.1.4",
    "@types/mocha": "^9.1.1",
    "@types/node": "^18.0.0",
    "@types/supertest": "^2.0.12",
    "chai": "^4.3.6",
    "chai-http": "^4.3.0",
    "concurrently": "^7.2.2",
    "jest": "^28.1.2",
    "nodemon": "^2.0.18",
    "supertest": "^6.2.4",
    "ts-jest": "^28.0.5",
    "ts-node": "^10.8.1",
    "typescript": "^4.7.4"
  },
  "dependencies": {
    "dotenv": "^16.0.1",
    "express": "^4.18.1",
    "mocha": "^10.0.0"
  }
}
